    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">Best Sellers</li>
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        <li data-filter=".hot-sales">Hot Sales</li>
                    </ul>
                </div>
            </div>
            <div class="row product-grid">
                <% productData.forEach(product =>{ %>
                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                        <div class="product-card">
                            <div class="product-img-wrapper">
                                <a href="/productdetails/<%= product._id %>">
                                    <img class="product-img" src="/uploads/re-images/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                                </a>
                                    <!--<span class="hot-badge">Hot</span>-->
                                
                                <div class="product-action-buttons">
                                    <form action="/add-to-cart/<%= product._id %>" method="post" class="d-inline">
                                        <button type="submit" class="action-button cart-button">
                                            <i class="fa-solid fa-bag-shopping"></i>
                                        </button>
                                    </form>
                                    <form action="/add-to-wishlist/<%= product._id %>" method="post" class="d-inline">
                                        <button type="submit" class="action-button wishlist-button">
                                            <i class="fa-regular fa-heart"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="product-info">
                                <h3 class="product-title">
                                    <a href="/products/<%= product._id %>"><%= product.productName %></a>
                                </h3>
                                <div class="product-price">
                                    <span class="sale-price"><%= product.salePrice %></span>
                                        <span class="regular-price"><strike><%= product.regularPrice %></strike></span>
                                </div>
                                <p class="product-description"><%= product.description %>...</p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <!-- Product Section End -->

