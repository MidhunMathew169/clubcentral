    <title>Login - Club Central</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url('https://i.pinimg.com/736x/25/2c/44/252c44d3df8110ea3bb15cf1108b77bd.jpg') no-repeat center center;
            background-size: cover;
        }

        .login-image {
        background-size: cover;
        border-radius: 10px;
        height: 100%;
    }
    .login-card {
        /* border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); */
        background-color: #ffffffb3;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        padding: 40px;
        max-width: 500px;
        width: 100%;
        margin: 0 auto;
    }
    .login-card-header {
        /* font-weight: bold;
        font-size: 1.5rem; */
        font-weight: 700;
        font-size: 2rem;
        color: #143e6c;
        margin-bottom: 5px;
    }
    .password-container{
        position: relative;
    }
    .toggle-password {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        cursor: pointer;
        opacity: 0.7;
    }
    .toggle-password:hover {
        opacity: 1;
    }
    .btn-primary {
        background-color: #143e6c;
        border: none;
        padding: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #0d2d50;
        transform: translateY(-2px);
    }
    .btn-success {
        background-color: #28a745;
        border: none;
        padding: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }
    .btn-success:hover {
        background-color: #218838;
        transform: translateY(-2px);
    }
    .form-control {
        padding: 12px 15px;
        border-radius: 8px;
        border: 1px solid #ddd;
    }
    .form-control:focus {
        box-shadow: 0 0 0 3px rgba(20, 62, 108, 0.2);
        border-color: #143e6c;
    }
    .btn a {
        color: white !important;
        text-decoration: none;
        display: block;
        width: 100%;
    }
    /* .btn-green {
        background-color: #28a745;
        color: white;
    }
    .btn-green:hover {
        background-color: #218838;
    } */
    .welcome-text {
        color: white;
        text-align: center;
        max-width: 600px;
        margin: 0 auto 30px;   
    }
    .welcome-text h2{
        font-weight: 700;
        margin-bottom: 15px;
        font-size: 2.5rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }
    .welcome-text p {
        font-size: 1.1rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }
    .btn-block a{
        color: aliceblue;
    }
    .error-message {
        color: red;
        font-size: 0.75rem;
        display: none;
    }
    </style>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <div class="container-fluid">
        <div class="row login-container">
            <!-- Left Section -->
            <div class="col-md-6">
                <div class="welcome-text">
                    <h2>Welcome to Club Central</h2>
                    <p>Your one-stop destination for premium sports gear and accessories.</p>
                </div>
            </div>
            <!-- Right Section -->
            <div class="col-md-6">
                <div class="login-card">
                    
                    <h1 class="login-card-header text-center">Welcome Back</h1>
                    <p class="text-center text-muted mb-4">Sign in to continue your sports journey</p>
    
                    <form id="loginform" action="/login" method="POST">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="password">Password</label>
                            <div class="password-container">
                                <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
                                <i class="toggle-password" onclick="togglePasswordVisibility()">üëÅÔ∏è</i>
                            </div>
                            <a href="/forgotPassword" class="d-block mt-2 text-primary small">Forgot Password?</a>
                        </div>
    
                        <div id="error" class="error-message"></div>
                        
                        <%if(locals.message && message.length > 0){%>
                            <div class="alert alert-danger text-center" role="alert">
                                <%=message%>
                            </div>
                        <%}%>
    
                        <button type="submit" class="btn btn-primary btn-block mt-4">SIGN IN</button>
                    </form>
                    
                    <hr>
                    <p class="text-center">New to Club Central?</p>
                    <button class="btn btn-success btn-block">
                        <a href="/signup">
                            CREATE YOUR ACCOUNT
                        </a>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById("password");
            const passwordToggle = document.querySelector(".toggle-password");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordToggle.textContent = "üôà";
            } else {
                passwordInput.type = "password";
                passwordToggle.textContent = "üëÅ";
            }
        }
    </script>