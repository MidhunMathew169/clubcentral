    <title>ClubCentral</title>
    <link rel="stylesheet" href="css/style.css" type="text/css">
   
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <style>
        .dropdown {
            position: relative;
            display: inline-block;
        }
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            right: 0;
        }
        .header__top{
            z-index: 1000;
        }
        .header__top__links a{
            color: black;
        }
        .header__top__links a:hover {
            color:#065f29;
        }
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            width: 100%;
        }
        .sign-in-link{
            color: black;
        }
        .dropdown-content a:hover {
            background-color: #9a9e9c;
        }
        .dropdown:hover .dropdown-content {
            display: block;
        }
        .parent-content {
            display: flex;
            width: 100%;
            background-color: #f1f1f1;
            justify-content: space-evenly;
            gap: 2rem;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .row {
            display: flex;
            align-items: center;
            justify-content: space-around;
            width: 100%;
        }

        .header__logo {
            display: flex;
            align-items: center;
        }

        .brand-logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
            text-decoration: none;
            letter-spacing: -0.5px;
            transition: color 0.3s ease;
        }

        .brand-logo:hover {
            color: white;
        }

        .header__menu {
            display: flex;
            align-items: center;
            justify-content: space-around;
            gap: 2rem;
            flex-grow: 1;
        }

        .header__menu ul {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .header__menu ul li {
            display: flex;
            align-items: center;
        }

        .search-inp {
            display: flex;
            align-items: center;
            margin-left: 1.5rem;
            flex-grow: 1;
            max-width: 300px;
        }

        .search-form {
            display: flex;
            align-items: center;
            width: 100%;
            position: relative;
        }

        .search-input {
            width: 100%;
            padding: 10px 40px 10px 15px;
            border: 1.5px solid #e0e0e0;
            border-radius: 25px;
            font-size: 0.9rem;
            outline: none;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(0,135,138,0.1);
        }

        .search-btn {
            position: absolute;
            right: 5px;
            background: none;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #888;
            transition: color 0.3s ease;
        }

        .search-btn:hover {
            color: var(--primary);
        }

        .search-btn i {
            font-size: 1rem;
        }

        .mx-auto {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .mx-auto a {
            text-decoration: none;
            color: black;
            transition: color 0.3s ease;
        }

        .mx-auto a:hover {
            color: black;
            text-decoration: none;
        }

        .header__nav__option {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-left: 1rem;
        }

        .header__nav__option a {
            position: relative;
        }

        .header__nav__option span {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 0.7rem;
        }

        @media (max-width: 992px) {
            .header__menu {
                flex-direction: column;
            }

            .row {
                flex-direction: column;
            }

            .mx-auto {
                margin-top: 1rem;
            }

            .search-inp {
                margin-left: 0;
                margin-top: 1rem;
                width: 100%;
            }
        }
    </style>
    <!-- Header Section Begin -->
    <header class="header">
    </header>
        <div class="parent-content">
            <div class="row d-flex">
                <div class="col-lg-2 col-md-3">
                    <div class="header__logo">
                        <a href="./index.html" class="brand-logo">ClubCentral</a>
                    </div>
                </div>
                <div class="col-lg-10 col-md-6 d-flex">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a href="/">Home</a></li>
                            <li><a href="/shop">Shop</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="">Contacts</a></li>
                        </ul>
                        <div class="search-inp">
                            <form action="/search" method="GET" class="search-form">
                                <input 
                                    type="search" 
                                    name="search" 
                                    class="search-input" 
                                    placeholder="Search for products..." 
                                    autocomplete="off"
                                >
                                <button type="submit" class="search-btn" title="Search">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                        
                    </nav>
                    <div class="mx-auto">
                        <% if(user) { %>
                            <div class="dropdown">
                                <a href="" class="sign-in-link"><%= user.firstname %></a>
                                <div class="dropdown-content">
                                    <a href="/userProfile">Profile</a>
                                    <a href="/logout">logout</a>
                                </div>
                            </div>
                            <%} else{%>
                                <a href="/signup">Sign Up</a>
                                <a href="/login">Log in</a>
                                <% } %>
                    </div>
                    <div class="header__nav__option d-flex">
                        <a href="/wishlist"><img src="img/icon/heart.png" alt=""></a>
                        <a href="/cart"><img src="img/icon/cart.png" alt=""> <span>0</span></a>
                        <div class="price"></div>
                    </div>
                </div>
                <!--<div class="col-lg-3 col-md-3">
                    
                </div>-->
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>

        <script>
            //console.log(user.firstname)
        </script>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const loginSignupContainer = document.querySelector('.mx-auto');
                
                // Ensure login and signup buttons are in the same line with proper spacing
                if (loginSignupContainer) {
                    loginSignupContainer.style.display = 'flex';
                    loginSignupContainer.style.alignItems = 'center';
                    loginSignupContainer.style.gap = '1rem';
                }
            });
        </script>